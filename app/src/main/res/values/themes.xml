<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Default theme ( Red ) -->
    <style name="Base.Theme.MusicPlayer" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redColor_ofApp</item>
        <item name="colorPrimaryVariant">@color/redLightColor_ofApp</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- for the bar that is above Toollbar -->
        <item name="android:statusBarColor">@color/redColor_ofApp</item>
        <!-- for the color of the bar that is below the bottom navigation -->
        <item name="android:navigationBarColor">@color/dark_primaryColor_ofApp</item>
    </style>

